{
  "name": "rich-text-editor",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "npm --workspace=rich-text-editor run dev & npm --workspace=playground start",
    "build": "npm --workspace=rich-text-editor build",
    "build:playground": "yarn workspace playground build",
    "start:playground": "yarn workspace playground start",
    "format": "prettier --write .",
    "lint:eslint": "eslint --ext .js,.jsx .",
    "lint:fix": "eslint --ext .js,.jsx . --fix",
    "deploy:rich-text-editor-1": "yarn build && yarn workspace playground deploy:rich-text-editor-1",
    "deploy:rich-text-editor-2": "yarn build && yarn workspace playground deploy:rich-text-editor-2",
    "postinstall": "cd node_modules/rich-text-editor && npm install && npm run build"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "@lexical/react": "^0.29.0",
    "lexical": "^0.29.0",
    "lucide-react": "0.507.0",
    "@lexical/markdown": "0.29.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.27.0",
    "@lexical/eslint-plugin": "^0.29.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
